<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTripActivity"
        android:padding="16dp">

    <TextView
            android:id="@+id/add_trip_activity_text_title"
            android:text="@string/title_add_trip"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_button_add_src_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button android:id="@+id/add_trip_activity_button_add_src_address"
            android:text="Add origin address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_text_title"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_line_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"/>

    <View
            android:id="@+id/add_trip_activity_line_top"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_button_add_src_address"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_text_src_city"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:id="@+id/add_trip_activity_text_src_city"
            android:text="CENTRAL MTY"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_line_top"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_line_middle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <View
            android:id="@+id/add_trip_activity_line_middle"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_text_src_city"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_text_dest_city"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:id="@+id/add_trip_activity_text_dest_city"
            android:text="CENTRAL REYNOSA"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_line_middle"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_line_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <View
            android:id="@+id/add_trip_activity_line_bottom"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_text_dest_city"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_button_add_dest_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button android:id="@+id/add_trip_activity_button_add_dest_address"
            android:text="Add destination address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_line_bottom"
            app:layout_constraintBottom_toTopOf="@id/add_trip_activity_button_ok"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="24dp"/>

    <Button android:id="@+id/add_trip_activity_button_ok"
            android:text="@string/button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_trip_activity_button_add_dest_address"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>